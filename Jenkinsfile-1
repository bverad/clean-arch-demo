pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }

  stages {

    stage('Build') {
      steps {
        sh 'docker build -t bverad/clean-arch-demo:latest .'
      }
    }

    stage('Scan') {
      steps {
        sh 'trivy bverad/clean-arch-demo:latest'
      }
    }
  }
}
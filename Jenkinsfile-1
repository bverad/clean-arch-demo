pipeline {
  agent { label 'linux' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }

  stages {
    stage('Compilar Java') {
        steps {
          script {
            sh "mvn clean install"
          }
        }
    }

    stage('Build') {
      steps {
        sh 'docker build -t bverad/clean-arch-demo:latest .'
      }
    }

    stage('Scan') {
      steps {
        sh 'trivy bverad/clean-arch-demo:latest'
      }
    }
  }
}
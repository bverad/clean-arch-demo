pipeline {
  agent { label 'linux' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t bverad/clean-arch-demo:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy --no-progress --exit-code 1 --severity HIGH,CRITICAL bverad/clean-arch-demo:latest'
      }
    }
  }
}